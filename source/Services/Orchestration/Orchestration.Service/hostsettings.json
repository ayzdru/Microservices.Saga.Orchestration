{
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "MassTransit": "Debug",
        "System": "Information",
        "Microsoft": "Information",
        "Microsoft.EntityFrameworkCore": "Information",
        "Microsoft.EntityFrameworkCore.Database.Command": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName" ],
    "Properties": {
      "Application": "Orchestration.Service"
    }
  },
  "ConnectionStrings": {
    "OrchestrationDbConnection": "Server=localhost;Port=5432;Database=Orchestration;User Id=postgres;Password=postgres;Pooling=true;MaxPoolSize=100;"
  },
  "MongoDb": {
    "ConnectionString": "mongodb://admin:admin@localhost:27017/?directConnection=true&replicaSet=rs0",
    "Database": "SagaOrchestrationDb"
  },
  "RabbitMQ": {
    "Host": "localhost",
    "Port": 5672,
    "VirtualHost": "/",
    "Username": "admin",
    "Password": "admin"
  }

}
