        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "price": {
            "type": "number",
            "format": "double"
          },
          "stock": {
            "type": "integer",
            "format": "int32"
          }
        }
      },
      "UpdateProductCommand": {
        "required": [
          "id",
          "name",
          "price",
          "stock"
        ],
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "name": {
            "type": "string"
          },
          "price": {
            "type": "number",
            "format": "double"
          },
          "stock": {
            "type": "integer",
            "format": "int32"
          }
        }
      }
    },
    "securitySchemes": {
      "OAuth2": {
        "type": "oauth2",
        "description": "OAuth2 AuthorizationCode flow",
        "flows": {
          "authorizationCode": {
            "authorizationUrl": "https://localhost:44310/connect/authorize",
            "tokenUrl": "https://localhost:44310/connect/token",
            "scopes": {
              "product": "Product API Full Access"
            }
          }
        }
      },
      "Bearer": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "Json Web Token"
      }
    }
  },
