              "schema": {
                "$ref": "#/components/schemas/UpdateProductCommand"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      },
      "delete": {
        "tags": [
          "Product.API"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
